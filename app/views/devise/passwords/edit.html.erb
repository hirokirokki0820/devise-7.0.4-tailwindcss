<div class="form-box">
  <h2 class="text-3xl md:text-center">パスワードを変更してください</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "新しいパスワード", class: "font-semibold" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-input" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワードの確認", class: "font-semibold" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
    </div>

    <div class="actions mb-3">
      <%= f.submit "パスワードを変更する", class: "btn btn-sky"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
