<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field my-3">
    <%= f.label :email, class: "font-semibold" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
  </div>

  <div class="field my-3">
    <%= f.label :password, class: "font-semibold" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field my-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "ログイン状態を保持する" %>
    </div>
  <% end %>

  <div class="actions mb-3">
    <%= f.submit "ログイン", class: "btn btn-sky" %>
  </div>
<% end %>

<div class="mb-3">
  <%= render "devise/shared/links" %>
</div>
