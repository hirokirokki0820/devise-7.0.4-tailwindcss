<div class="form-box">
  <h2 class="text-3xl md:text-center">ユーザー情報の編集 <%#= resource_name.to_s.humanize %></h2>

  <%= form_with model: @user, url: registration_path(resource_name), local: true, html: { data: { turbo_method: :put } } do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "font-semibold" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class: "font-semibold" %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "font-semibold" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: "font-semibold" %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <div class="actions mb-3">
      <%= f.submit "更新する", class: "btn btn-sky" %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "アカウントを削除する", registration_path(resource_name), class: "link", data: { turbo_confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "戻る", :back, class: "link" %>
</div>
